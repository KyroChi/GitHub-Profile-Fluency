{
  "name":
  "GitHub Profile Fluency",

  "description":
  "Displays useful information about a GitHub user when you view their profile",

  "version":
  "1.1.0",

  "manifest_version":
  2,

  "icons": {

    "128": "icon.png"

  },

  "content_scripts": [
    {

      "matches":
      ["http://github.com/*",
        "https://github.com/*"],

      "exclude_matches":
      ["http://github.com/*/*",
        "https://github.com/*/*"],

      "js":
      ["content.js"],

      "run_at":
      "document_start"

    }
  ],

  "permissions": [
    "contentSettings",
    "http://github.com/*"
  ]
}
